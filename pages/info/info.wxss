/* pages/info/info.wxss */
.info_wrap{
  width: 700rpx;
  height: 100%;
  margin: 25rpx;
  margin-top: 100rpx;
  border-radius: 25rpx;
  background-color: white;
  display: flex;
  flex-direction: column;

}

.nickname{
  width: 376rpx;
  height: 50rpx;
  font-size: larger;
  font-weight: bolder;
  margin-left: 280rpx;
  margin-top: 30rpx;
  text-align: left;
}

.avatar{
  overflow:hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  left: 75rpx;
  top:30rpx;
  background-color: rebeccapurple;
}

.data_box{
  width: 80%;
  height: 160rpx;
  margin-bottom: 30rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  align-self: center;
}

.data_box .separate{
  width: 4rpx;
  height: 50rpx;
  background-color: #ADADAD;
}

.data_box .item_box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.data_box .number{
  font-size: medium;
  font-weight: bold;
}

.data_box .item{
  font-size: small;
  color: #505050;
  font-weight: bold;
}

.horizontal_separate{
  width: 100%;
  height: 2rpx;
  background-color: #F2F2F2;
}

.record_box{
  width: 100%;
  display: flex;
  flex-direction: column;
  
}

.record_box .title{
  width: 100%;
  text-align: left;
  font-size: large;
  font-weight: bold;
  margin: 15rpx;
  margin-left: 20rpx;
}

.record_box .record_list_box{
  width: 680rpx;
  display: flex;
  align-self: center;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 15rpx;
}

.record_box .record_list_box .record_item_box{
  width: 207rpx;
}

.record_box .record_list_box .record_item_box image{
  width: 207rpx;
  height: 306rpx;
}

.record_box .record_list_box .record_item_box view{
  width: 207rpx;
  font-size: small;

}

.declare .title{
  width: 100%;
  text-align: left;
  font-size: large;
  font-weight: bold;
  margin: 15rpx;
  margin-left: 20rpx;
}