/* 电影详情页样式 */
.movie_wrap{
  width: 100%;
  height: 480rpx;
}

.movie_box{
  width: 100%;
  height: 400rpx;
}

.movie_info_wrap{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.movie_info_wrap .movie_info_box{
  width: 600rpx;
  height: 60rpx;
  margin: 10rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.movie_info_box .movie_name{
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: medium;
  font-weight: bold;
  font-family: '黑体';
  color: #303030;
  text-align: left;
  
}

.movie_info_box .movie_actors{
  width: 100%;
  height: 20rpx;
  line-height: 20rpx;
  font-size: small;
  color: #adadad;
  text-align: left;
}

.movie_share_box,.movie_favourite_box{
  width: 64rpx;
  height: 64rpx;
  margin: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.movie_share_box image,.movie_favourite_box image{
  width: 36rpx;
  height: 36rpx;
}

.movie_share_box view,.movie_favourite_box view{
  width: 100%;
  height: 28rpx;
  font-size: small;
  color: #303030;
  text-align: center;
}

